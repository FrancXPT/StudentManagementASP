<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ewart</title>
    <link rel="stylesheet" href="~/lib/bootstrap/bootstrap.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <!-- Brand/logo -->
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
            <img src="~/images/logo.png" alt="logo" style="width:40px;">
        </a>

        <!-- Toggler/collapsibe Button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <!-- Links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a asp-controller="Courses" asp-action="Admission" class="nav-link">Admissions</a>
                </li>



                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                        School settings
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-controller="UserSettings" asp-action="Index">School details</a>
                        <a class="dropdown-item" asp-controller="BaseUsers" asp-action="Index">Manage employees</a>
                        <a class="dropdown-item" asp-controller="BaseUsers" asp-action="Index">Employee absence</a>
                        <a class="dropdown-item" asp-controller="Courses" asp-action="Index">Manage year groups</a>
                        <a class="dropdown-item" asp-controller="Kpi" asp-action="SchoolKPI">School KPI</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                        Student Management
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-controller="BaseUsers" asp-action="Student">Add/edit students</a>
                        <a class="dropdown-item" asp-controller="Kpi" asp-action="StudentKPI">Student KPI</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                        Class Management
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-controller="IndividualSubjects" asp-action="Index">View classes</a>
                        <a class="dropdown-item" asp-controller="Courses" asp-action="Index">Class KPI</a>
                    </div>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <partial name="_LoginPartial" />
            </ul>

        </div>
    </nav>

    <div class="container">
        @RenderBody()
        @RenderSection("Scripts", required: false)
        <hr />
    </div>




</body>
</html>


