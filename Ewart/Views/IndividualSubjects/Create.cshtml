@model Ewart.Models.Courses.IndividualSubject

@{
    ViewData["Title"] = "Create lesson";
}

<div class="container border p-2 mt-1">
    <h4 class="float-left">Create a new lesson plan</h4>
    <div class="float-right">
        <a asp-action="Index" class="btn btn-primary btn-lg active float-right m-md-auto" role="button" aria-pressed="true">Back to plans</a>
    </div>
    <br />
    <hr />
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <hr class="bg-dark" />
            <div class="row">
                <div class="form-group col-md-3">
                    <label asp-for="Name" class="control-label">Subject name</label>
                    <input asp-for="Name" class="form-control border-secondary" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="TeacherId" class="control-label">Teacher</label>
                    <input asp-for="TeacherId" class="form-control border-secondary" />
                    <span asp-validation-for="TeacherId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="CourseId" class="control-label">Year group</label>
                    <input asp-for="CourseId" class="form-control border-secondary" />
                    <span asp-validation-for="CourseId" class="text-danger"></span>
                </div>
            </div>
            <hr class="bg-dark" />
            <div class="row">
                <div class="form-group col-md-9">
                    <label asp-for="DescriptionOne" class="control-label">Learning objectives</label>
                    <textarea asp-for="DescriptionOne" class="form-control border-dark" rows="4"></textarea>
                    <span asp-validation-for="DescriptionOne" class="text-danger"></span>
                </div>
            </div>

            <hr class="bg-dark" />
            <div class="row">
                <div class="form-group col-md-9">
                    <label asp-for="DescriptionTwo" class="control-label">Learning activities</label>
                    <textarea asp-for="DescriptionTwo" class="form-control border-dark" rows="4"></textarea>
                    <span asp-validation-for="DescriptionTwo" class="text-danger"></span>
                </div>
            </div>

            <hr class="bg-dark" />
            <div class="row">
                <div class="form-group col-md-9">
                    <label asp-for="DescriptionThree" class="control-label">Additional materials</label>
                    <textarea asp-for="DescriptionThree" class="form-control border-dark" rows="4"></textarea>
                    <span asp-validation-for="DescriptionThree" class="text-danger"></span>
                </div>
            </div>


            <hr class="bg-dark" />
            <div class="row">
                <div class="form-group col-md-9">
                    <label asp-for="DescriptionFour" class="control-label">Discussion points</label>
                    <textarea asp-for="DescriptionFour" class="form-control border-dark" rows="4"></textarea>
                    <span asp-validation-for="DescriptionFour" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

