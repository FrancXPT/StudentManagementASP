@model Ewart.Models.Courses.Course

@{
    ViewData["Title"] = "Year Groups";
}

<div class="container mt-3">
    <h4>Add a year group</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Name of year group </label>
                    <input asp-for="Name" class="form-control border-dark" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CourseDescription" class="control-label">Brief description </label>
                    <input asp-for="CourseDescription" class="form-control border-dark" />
                    <span asp-validation-for="CourseDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TeacherId" class="control-label">Teacher</label>
                    <input asp-for="TeacherId" class="form-control border-dark" />
                    <span asp-validation-for="TeacherId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>


