@model Ewart.ViewModel.BaseUserViewModel


@{
    ViewData["Title"] = "Employees";
}
<hr />
<div class="container border-right-10">
    <h3>Manage staff</h3>
    <table class="table table-striped table-secondary table-bordered">
        <thead>
            <tr class="bg-primary">
                <th scope="col">First name</th>
                <th scope="col">Last name</th>
                <th scope="col">D.O.B</th>
                <th scope="col">Email</th>
                <th scope="col">Address</th>
                <th scope="col">Job Role</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ListUsers)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserType)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.UserId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.UserId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.UserId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <hr />
    <h4>Add staff members</h4>
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Index" method="post" role="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="BaseUser2.FirstName" class="control-label">First name:</label>
                            <input asp-for="BaseUser2.FirstName" class="form-control border-dark" />
                            <span asp-validation-for="BaseUser2.FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col col-md-6">
                        <div class="form-group">
                            <label asp-for="BaseUser2.LastName" class="control-label">Last name:</label>
                            <input asp-for="BaseUser2.LastName" class="form-control border-dark" />
                            <span asp-validation-for="BaseUser2.LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="BaseUser2.DateOfBirth" class="control-label">Date of birth:</label>
                    <input asp-for="BaseUser2.DateOfBirth" class="form-control border-dark" type="date" />
                    <span asp-validation-for="BaseUser2.DateOfBirth" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BaseUser2.Email" class="control-label">Email:</label>
                    <input asp-for="BaseUser2.Email" class="form-control border-dark" />
                    <span asp-validation-for="BaseUser2.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BaseUser2.Address" class="control-label">Address:</label>
                    <input asp-for="BaseUser2.Address" class="form-control border-dark" />
                    <span asp-validation-for="BaseUser2.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="sel1">Select list:</label>
                    <select class="form-control border-dark" id="sel1" asp-for="BaseUser2.UserType">
                        <option>Teacher</option>
                        <option>Teaching Assistant</option>
                        <option>Administration Staff</option>
                        <option>Other</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="BaseUser2.CostPerWeek" class="control-label">Cost per week:</label>
                    <input asp-for="BaseUser2.CostPerWeek" class="form-control border-dark" />
                    <span asp-validation-for="BaseUser2.CostPerWeek" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>