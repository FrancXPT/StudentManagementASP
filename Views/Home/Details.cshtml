
@model Course




<div class="container">
    <h2>@Model.Name</h2>
    <div class="row justify-content-center">
        <div class="col-4">
            <img src="@Model.ImageUrl" alt="@Model.Name" id="Image" />
        </div>
    </div>
    <div class="row justify-content-between mt-2" style="background-color: powderblue;">
        <div class="col-6">
            <h5 class="pull-left"><b>Minimum grade: @Model.Grade</b></h5>
        </div>
        <div class="col-6">
            <h5 class="pull-right"><b> Spaces left: @Model.NumberOfSpaces</b></h5>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-12">
            <h6>@Model.ShortDescritpion</h6>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-10">
            <p>@Model.LongDescription</p>
        </div>
    </div>
</div>
